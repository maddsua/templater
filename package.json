{
	"name": "@maddsua/templater",
	"version": "1.2.4",
	"description": "Builds HTML pages from templates",
	"type": "module",
	"bin": {
		"mtmp": "./bin/main.js",
		"templater": "./bin/main.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/maddsua/templater.git"
	},
	"scripts": {
		"build": "tsc",
		"ts": "tsc",
		"js_minify": "esbuild --minify --allow-overwrite bin/main.js --outfile=bin/main.js",
		"build_prod": "npm-run-all ts js_minify",
		"test": "node ./bin/main.js --config=test/templater.config.json",
		"watch": "node ./bin/main.js --watch --config=test/templater.config.json"
	},
	"keywords": [
		"template",
		"html",
		"netlify",
		"static",
		"build",
		"page"
	],
	"author": "maddsua",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/maddsua/templater/issues"
	},
	"homepage": "https://github.com/maddsua/templater#readme",
	"devDependencies": {
		"@types/node": "^16.18.9",
		"esbuild": "^0.16.7",
		"typescript": "^4.9.4",
		"npm-run-all": "^4.1.5"
	}
}
