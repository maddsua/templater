{
	"compilerOptions": {
		"lib": ["es5", "es2015.promise", "dom", "ESNext"],
		"target": "ESNext",
		"typeRoots": [
			"node_modules/@types"
		],
		"rootDir": "src/",
		"outDir": "bin/",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"sourceMap": false
	}
}